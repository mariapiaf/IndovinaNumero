<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.IndovinaNumero.FXMLController">
   <top>
      <Label text="Indovina il Numero!" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Button fx:id="btnNuovaPartita" defaultButton="true" mnemonicParsing="false" onAction="#doNuovaPartita" text="Nuova Partita">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Label text="Tentativi rimasti">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtTentativi" editable="false">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="layoutTentativo" disable="true">
               <children>
                  <TextField fx:id="txtTentativoUtente">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnProva" mnemonicParsing="false" onAction="#doTentativo" text="Prova" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnFacile" mnemonicParsing="false" onAction="#doFacile" text="FACILE">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMedio" mnemonicParsing="false" onAction="#doMedio" text="MEDIO">
                     <HBox.margin>
                        <Insets bottom="10.0" left="50.0" right="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnDifficile" mnemonicParsing="false" onAction="#doDifficile" text="DIFFICILE">
                     <HBox.margin>
                        <Insets left="60.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <TextArea fx:id="txtRisultato" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
